
<h1>&nbsp;</h1>

<ul class="years">
  <% for year in @years -%>
    <li <%= 'class="active" ' if year == @year %> ><%= link_to_if year != @year, year, :year => year %></li>
  <% end -%>
</ul>

<div class="boocs main">
  <% for booc in @boocs %>
    <div class="booc">
      <h1><%= booc.title %></h1>
      <div class="date"><%= booc.meta(:year) %></div>
      <div class="body"><%= textilize booc.content %></div>
      <div class="response">
        <h1>Responses</h1>
        <% form_for :response, :url => {:action => 'booc_response', :id => booc.id} do |f| %>
          <div class="no_spam"><%= f.text_area :mime %></div>
          <label>name:</label><%= f.text_field :title %><br/>
            <%= f.text_area :content %><br/>
            <%= f.submit 'respond' %>
        <% end %>
      </div>
      <%= clear %>
      <div class="image">
        <% if booc.attachment(:booc) %>
          <%= image_tag booc.attachment(:booc).public_filename %>
        <% end %>
      </div>
    </div>
    <br/>
  <% end  %>
</div>

<%= clear %>
