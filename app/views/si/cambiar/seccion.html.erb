<%= cambiar_tabs @section %>

<h1><%=  @section%></h1>

<% action_area do %>
  <%= action nil, "añadir una entrada en la sección #{@section}", {:action => 'crear', :id => @section } %>
<% end %>

<table>
  <thead>
    <tr>
      <td>&nbsp;</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% for page in @pages %>
      <tr>
        <td><%= render_item page, @section %></td>
        <td class="actions">
          <%= link_to 'borrar',  [:admin, page], :confirm => "vas a borrar #{page.title}. ¿estás segurx?", :method => :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
