
<tr>
  <td>
    <%= image_tag 'page_white.png', :style => "margin-left: #{depth}em;" %>
    <%= link_to root.title, [@project, root, root.content, :edit] %> 
  </td>
  <td><%= fecha root.updated_at %></td>
  <td><%= root.state %></td>
  <td>(<%= root.position %>)</td>
  <td class="table_actions">    
    <% if !root.parent.nil? %>
      <%= link_to btn_tag('page_white_up.png', 'subir'), {:controller => 'pages', :action => 'move_up', :id => root}, :class => 'action' %>
      <%= link_to btn_tag('page_white_down.png', 'bajar'), { :action => 'move_down', :id => root}, :class => 'action' %>
    <% end %>
    <%= link_to image_tag('page_white_add.png') + ' añadir página hija', new_project_page_path(:parent_id => root), :class => 'action' %>
    <%= link_to image_tag('page_white_database.png') + ' info', [@project, root],  :class => 'action'  %>
    <%= link_to image_tag('page_white_delete.png') + ' borrar', [@project, root], :confirm => 'seguro?', :method => :delete, :class => 'action' %> 
  </td>
</tr>

<% for node in root.children %>
  <%= render :partial => 'children', :locals => {:root => node, :depth => depth + 1} %>
<% end %>
