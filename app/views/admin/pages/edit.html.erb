<%= page_tabs(@page, 'Content')  %>

<h1>Página '<%= @page.title %>'</h1>

<div class="actions">
  <%= javascript_action('icons/edit.png', 'Guardar', "jQuery('form.edit_page').submit()") %>
  <%= action nil, 'Volver', admin_pages_path %>
</div>
<%= clear %>

<div class="formBox">
  <h1>Editar contenido</h1>
  
  <%= error_messages_for :page %>
  
  <% form_for([:admin, @page]) do |f| %>
    <div>
      <label>Título</label>
      <%= f.text_field :title %>
    </div>
    <div>
      <label>Estado</label>
      <%= f.select :state, Page::STATES %>
    </div>  
    <div>
      <label>Type</label>
      <%= f.text_field :mime %>
    </div>
    <div class="editor">
      <%= f.text_area :content, :id => 'wysiwyg' %>
    </div>
  <% end %>
</div>

<%= render :partial => 'page_attachments' %>


